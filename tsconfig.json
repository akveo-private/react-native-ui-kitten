{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "@ui-kitten/*": [
        "./src/*"
      ],
      "@kitten/*": [
        "./src/components/*"
      ],
      "@pg/*": [
        "./src/playground/src/*"
      ]
    }
  },
  "include": [
    "./src",
    "./src/**/package.json"
  ],
  "exclude": [
    "./src/template-js",
    "./src/template-ts",
    "./src/playground",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.snap"
  ]
}
