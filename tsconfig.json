{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react-native",
    "target": "es2015",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "react-native-ui-kitten": [
        "./src/framework"
      ],
      "@ui-kitten/*": [
        "./src/*"
      ],
      "@kitten/*": [
        "./src/framework/*"
      ],
      "@pg/*": [
        "./src/playground/src/*"
      ],
      "@eva-design/*": [
        "./node_modules/@eva-design/*"
      ]
    }
  },
  "include": [
    "./src",
    "./src/**/package.json"
  ],
  "exclude": [
    "./src/template-js",
    "./src/template-ts",
    "./src/playground",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.snap"
  ]
}
