{
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "./dist/tsc-out",
    "declaration": true,
    "skipLibCheck": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "./src",
    "./src/**/package.json"
  ],
  "exclude": [
    "./src/templates",
    "./src/playground",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.snap"
  ]
}
